<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Text Color Options"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10sp"
        android:paddingBottom="10sp">

        <Button
            android:id="@+id/text1"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/text1"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/text2"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/text2"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/text3"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/text3"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/text4"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/text4"
            android:layout_margin="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10sp"
        android:paddingBottom="10sp">

        <Button
            android:id="@+id/text5"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/text5"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/text6"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/text6"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/text7"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/text7"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/text8"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/button"
            android:layout_margin="10sp"/>

    </LinearLayout>

</LinearLayout>
