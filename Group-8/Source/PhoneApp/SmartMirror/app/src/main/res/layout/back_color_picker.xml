<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background Color Options"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10sp"
        android:paddingBottom="10sp">

        <Button
            android:id="@+id/back1"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/back1"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/back2"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/back2"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/back3"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/back3"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/back4"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/back4"
            android:layout_margin="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10sp"
        android:paddingBottom="10sp">

        <Button
            android:id="@+id/back5"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/back5"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/back6"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/back6"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/back7"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/back7"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/back8"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@color/colorBlack"
            android:layout_margin="10sp"/>

    </LinearLayout>

</LinearLayout>
